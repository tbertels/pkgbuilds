# https://aur.archlinux.org/packages/rare
groups=('modified')

pkgname=rare
pkgver=1.10.6
pkgrel=1
pkgdesc="GUI for legendary. An Epic Games Launcher open source alternative"
arch=('any')
url="https://github.com/Dummerle/Rare"
license=('GPL3')
depends=('legendary' 'python-pyqt5' 'python-qtawesome' 'python-requests'
         'python-typing_extensions' 'qt5-svg')
makedepends=('python-build' 'python-installer' 'python-setuptools' 'python-wheel')
optdepends=('python-pypresence: Use Discord RPC'
            'python-pywebview: webview-based login')
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('ef899742d69dc5f1d99a63bb9547f1e3a2dd4001d215498313627b46e3b55598')

build() {
  cd "Rare-$pkgver"
  python -m build --wheel --no-isolation
}

package() {
  cd "Rare-$pkgver"
  python -m installer --destdir="$pkgdir" dist/*.whl

  install -Dm644 "misc/$pkgname.desktop" -t "$pkgdir/usr/share/applications/"
  install -Dm644 "$pkgname/resources/images/Rare.png" "$pkgdir/usr/share/pixmaps/$pkgname.png"
}
