# https://aur.archlinux.org/packages/pyinstaller-hooks-contrib
groups=('modified')

pkgname=pyinstaller-hooks-contrib
pkgver=2023.12
pkgrel=1
pkgdesc="Community maintained hooks for PyInstaller"
arch=('any')
url="https://github.com/pyinstaller/pyinstaller-hooks-contrib"
license=('Apache' 'GPL2')
depends=('python')
makedepends=('python-build' 'python-installer' 'python-setuptools' 'python-wheel')
checkdepends=('pyinstaller' 'python-psutil' 'python-pytest-timeout' 'python-pytest-xdist')
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('d6430d552194324c41d5094926da71fa3f1578fbc819fb661635b13980d41384')

build() {
  cd "$pkgname-$pkgver"
  python -m build --wheel --no-isolation
}

check() {
  cd "$pkgname-$pkgver"
  pytest --maxfail=3 \
    -m "not darwin and not win32 and not slow" \
    -n=auto --maxprocesses="${PYTEST_XDIST_AUTO_NUM_WORKERS:-2}"
}

package() {
  cd "$pkgname-$pkgver"
  python -m installer --destdir="$pkgdir" dist/*.whl
}
